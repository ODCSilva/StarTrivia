<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.omar.quizbot.QuizActivity"
    android:background="@color/primary_darker">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:id="@+id/tvQuestion"
        android:layout_above="@+id/btnAns1"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/tvPosition"
        android:textColor="@color/primary_text"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnAns1"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/btnAns2"
        android:onClick="tryAnswer"
        android:background="@drawable/button_background_drawable"
        android:textColor="@color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnAns2"
        android:layout_marginBottom="16dp"
        android:focusable="false"
        android:layout_above="@+id/btnAns3"
        android:onClick="tryAnswer"
        android:background="@drawable/button_background_drawable"
        android:textColor="@color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnAns3"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/btnAns4"
        android:onClick="tryAnswer"
        android:background="@drawable/button_background_drawable"
        android:textColor="@color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnAns4"
        android:layout_alignParentBottom="true"
        android:onClick="tryAnswer"
        android:background="@drawable/button_background_drawable"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvPosition"
        android:textColor="@color/secondary_text"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tvScore"
        android:textColor="@color/secondary_text"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed" />
</RelativeLayout>
